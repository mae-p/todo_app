<%= form_with model: @task, url: tasks_path do |f| %>

  <%= f.label :タスク %>
  <%= f.text_field :title %>

  <%= f.label :期限 %>
  <%= f.date_field :deadline %>

  <%= f.submit "作成" %>
<% end %>

<h1>タスク一覧<h1>

<% @tasks.each do |t| %>
  <h3><%= t.title %></h3>
  <p>期限:<%= t.deadline %><p>
  <%= t.status %>

  <%= form_tag done_task_path(t), method: :post do %>
    <%= submit_tag "完了" %>
  <% end %>
<% end %>


