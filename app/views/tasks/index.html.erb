<%= form_with model: @task, url: tasks_path do |f| %>
  <%= f.label :タスク %>
  <%= f.text_field :title %>

  <%= f.label :期限 %>
  <%= f.date_field :deadline %>

  <%= f.label :優先度 %>
  <%= f.select :priority, Task.priorities.keys.to_a, { include_blank: '選択してください'} %>

  <%= f.submit "作成" %>
<% end %>

<div class=task-container>
  <div class="item"%>
    <h1>未完了</h1>
      <% @tasks.each do |t| %>
        <% if (t.deadline - @today).to_i > 0 %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority %>
          <p>期限:<%= t.deadline %><p>
          <p>残り:<%= (t.deadline - @today).to_i %>日<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
                data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>

        <% elsif (t.deadline - @today).to_i == 0 %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority %>
          <p>期限:<%= t.deadline %><p>
          <p>今日までです！頑張りましょう！<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
            data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>

        <% else %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority %>
          <p>期限:<%= t.deadline %><p>
          <p>期限が超過しています。優先度を上げましょう！<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
            data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>
        <% end %>
      <% end %>
  </div>

  <div class="item"%>
    <h1>完了</h1>
      <% @tasks_done.each do |t| %>
        <h3><%= t.title %></h3>
        <p>完了日:<%= t.done_at.strftime('%Y-%m-%d') %><p>
        <%= form_tag task_path(t), method: :delete,
          data: { turbo_confirm: "削除しますか?" } do %>
          <%= submit_tag "削除" %>
        <% end %>
      <% end %>
  </div>
</div>

