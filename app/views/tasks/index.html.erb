<%= form_with model: @task, url: tasks_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.label :priority %>
  <%= f.select :priority, Task.priorities_i18n.invert.to_a %>

  <%= f.submit "作成" %>
<% end %>

<div class=task-container>
  <div class="item"%>
    <h1>未完了</h1>
      <% @not_done_tasks.each do |t| %>
        <% if t.deadline > Time.zone.today %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority_i18n %><p>
          <p>期限:<%= t.deadline %><p>
          <p>残り:<%= t.remaining_days %>日<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
                data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>

        <% elsif t.deadline.today? %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority_i18n %><p>
          <p>期限:<%= t.deadline %><p>
          <p>今日までです！頑張りましょう！<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
            data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>

        <% else %>
          <h3><%= t.title %></h3>
          <p>優先度:<%= t.priority_i18n %><p>
          <p>期限:<%= t.deadline %><p>
          <p>期限が超過しています。優先度を上げましょう！<p>
          <%= form_tag done_task_path(t), method: :post do %>
            <%= submit_tag "完了" %>
          <% end %>
          <%= form_tag task_path(t), method: :delete,
            data: { turbo_confirm: "削除しますか?" } do %>
            <%= submit_tag "削除" %>
          <% end %>
        <% end %>
      <% end %>
  </div>

  <div class="item"%>
    <h1>完了</h1>
      <% @done_tasks.each do |t| %>
        <h3><%= t.title %></h3>
        <p>完了日:<%= t.done_at.strftime('%Y-%m-%d') %><p>
        <%= form_tag task_path(t), method: :delete,
          data: { turbo_confirm: "削除しますか?" } do %>
          <%= submit_tag "削除" %>
        <% end %>
      <% end %>
  </div>
</div>